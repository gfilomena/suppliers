# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.UserController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /test                       controllers.AsyncController.test

# SEARCH
GET     /query                      controllers.AsyncController.query
POST    /search                      controllers.SearchController.search

# USER
POST   /users/authenticate          controllers.UserController.authenticate
POST   /users/register              controllers.UserController.register
POST   /users/logout                controllers.UserController.logout
GET    /users                       controllers.UserController.getAll
GET    /users/:id                   controllers.UserController.get(id: String)
PUT    /users/:id                   controllers.UserController.update(id: String)
DELETE /users/:username             controllers.UserController.delete(username: String)

# REGISTRATION
GET    /registration                  controllers.RegistrationController.getAll()
GET    /registration/:id              controllers.RegistrationController.get(id: String)
POST   /registration                  controllers.RegistrationController.create()
GET    /registration/me/              controllers.RegistrationController.findByUser()
PUT    /registration/:id              controllers.RegistrationController.update(id: String)
DELETE /registration/:id              controllers.RegistrationController.delete(id: String)

# SEARCH RESULT
GET       /user/:username/results       controllers.SearchController.getSearchResults(username: String)
DELETE    /user/:username/results       controllers.SearchController.delete(username: String)

# REPOSITORY
GET    /repository                  controllers.RepositoryController.getAll()
GET    /repository/:id              controllers.RepositoryController.get(id: String)
POST   /repository                  controllers.RepositoryController.create()
PUT    /repository/:id              controllers.RepositoryController.update(id: String)
DELETE /repository/:id              controllers.RepositoryController.delete(id: String)
GET    /repository/me/              controllers.RegistrationController.findRepositoriesByUser()

# BOOKMARK
GET       /bookmark                  controllers.BookmarkController.getAll()
GET       /bookmark/:id              controllers.BookmarkController.get(id: String)
GET       /bookmark/me/              controllers.BookmarkController.findByUser()
DELETE    /bookmark/me/              controllers.BookmarkController.deleteAllByUser()
POST      /bookmark                  controllers.BookmarkController.create()
DELETE    /bookmark/:id              controllers.BookmarkController.delete(id: String)

# MCSSR
POST      /mcssr                     controllers.McssrController.create()
POST      /mcssr/tag                 controllers.McssrController.updateTags

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
