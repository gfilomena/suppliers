# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.UserController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /test                       controllers.AsyncController.test

GET     /query                      controllers.AsyncController.query
POST    /search                      controllers.SearchController.search

POST   /users/authenticate          controllers.UserController.authenticate
POST   /users/register              controllers.UserController.register
POST   /users/logout                controllers.UserController.logout
GET    /users                       controllers.UserController.getAll
GET    /user/:id                    controllers.UserController.get(id: String)
PUT    /user/:id                    controllers.UserController.update(id: String)
DELETE /user/:username              controllers.UserController.delete(username: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
